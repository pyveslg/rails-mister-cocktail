<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://www.thecocktaildb.com/images/ingredients/ice.png');">
  <div class="banner-content">
    Choose ingredients for <%= @cocktail.name %>
    <%= simple_form_for([@cocktail, Dose.new]) do |f| %>
      <% @doses.each do |dose| %>
        <%= f.simple_fields_for "doses[]", dose do |p|%>
          <%= p.input :ingredient_id, collection: Ingredient.order(:name), prompt: "Choose an existing ingredient" %>
          <%= p.input :description %>
        <% end %>
      <% end %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
