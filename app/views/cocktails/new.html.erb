<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://imbibemagazine.com/wp-content/uploads/2013/07/886x590ximbibe-herb-cocktails-slideshow-4.jpg.pagespeed.ic.BIP8Np71vs.jpg');">
  <div class="banner-content">
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name, label:"Enter name of the cocktail", placeholder:"ex: margarita" %>
      <%= f.input :img, label:"Fill in URL link to cocktail preview", placeholder: "http://..." %>
      <%= f.button :submit, class: "btn btn-warning btn-lg" %>
    <% end %>
  </div>
</div>

