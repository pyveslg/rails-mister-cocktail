<div class="padded">
  <div class="wrapper main-menu">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <ul >
            <li><%= link_to "Welcome", root_path %></li>
            <li><%= link_to "Add a Cocktail", new_cocktail_path  %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @cocktail.img %>);">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <div class="doses">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
    </div>
    <%= link_to "Add a dose now!", new_cocktail_dose_path(@cocktail.id), class: "btn btn-success btn-lg"  %>
  </div>
</div>
